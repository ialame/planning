# ===============================================
# FRONTEND ENVIRONMENT CONFIGURATION
# Pokemon Card Planning - OAuth2/OIDC
# ===============================================
#
# Copy this file to .env and update values
# DO NOT commit .env to version control
#

# API Base URL
VITE_API_BASE_URL=http://localhost:8080

# Application URL (for OAuth redirects)
VITE_APP_URL=http://localhost:5173

# ===============================================
# AUTHENTIK OAUTH2/OIDC CONFIGURATION
# ===============================================

# Authentik Authority URL (issuer)
# Format: https://your-authentik-domain/application/o/your-app-slug/
VITE_AUTHENTIK_AUTHORITY=https://auth.pcagrade.com/application/o/pokemon-planning/

# OAuth2 Client ID (from Authentik Application)
VITE_AUTHENTIK_CLIENT_ID=d2J6p8Y3ty6Sbxg7Xb0yBQwYGFOeMMhGDsfYuCFn

# ===============================================
# OPTIONAL SETTINGS
# ===============================================

# Enable debug logging
VITE_DEBUG=false

# Session timeout in minutes (for UI warnings)
VITE_SESSION_TIMEOUT=30
